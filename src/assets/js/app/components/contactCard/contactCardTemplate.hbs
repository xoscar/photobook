<div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 mb-5">
	<div class="card" style="height: 22.5rem">
	  <img class="card-img-top" src="{{contact.imageUrl}}" alt="Card image cap" style="height: 10rem">
	  <div class="card-body">
	    <h4 class="card-title">{{contact.name}}</h4>
	    <p class="card-text">{{contact.email}}</p>
	    <p class="card-text">Phone: {{contact.phone}}</p>
	    <div class="row justify-content-end">
	    	<div class="col-sm-10 text-right">
	    		<a data-contactid="{{contact.id}}" class="pointer delete-contact btn btn-danger text-light">Delete</a>
		    	<a data-contactid="{{contact.id}}" class="pointer detail-view-button btn btn-primary text-light">Details</a>
		    </div>
	  	</div>
	  </div>
	</div>
</div>